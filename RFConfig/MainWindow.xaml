<Window x:Class="RFConfig.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RFConfig"
        mc:Ignorable="d"
        Title="RFConfigration" 
        Height="350" Width="525"
        MinHeight="350" MinWidth="525"
        MaxHeight="450" MaxWidth="625"
        Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="0.6*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="MainMenu" 
              Grid.Column="0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          
            <Grid.RowDefinitions>
              <RowDefinition Height="0.3*"/>
              <RowDefinition Height="0.3*"/>
              <RowDefinition Height="0.3*"/>
              <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <SolidColorBrush Opacity="0.5" Color="LightGray"/>
            </Grid.Background>
            <Button x:Name="HamburgerButton"
                    Grid.Column="0" Grid.Row="0"
                    Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="20" FontFamily="Segoe MDL2 Assets" 
                    Content="&#xE700;" HorizontalContentAlignment="Center"
                    Background="Transparent" BorderThickness="0"
                    Click="HamburgerButton_Click">
                
            </Button>
            
            <Button x:Name="ConnectButton" 
                    Grid.Column="0" Grid.Row="1"
                    Margin="0 5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="20" FontFamily="Segoe MDL2 Assets" 
                    Content="&#xED5C;" HorizontalContentAlignment="Center"
                    Background="Transparent" BorderThickness="0"
                    Click="ConnectButton_Click">
                
            </Button>

            <Button x:Name="SendButton"
                    Grid.Column="0" Grid.Row="2"
                    Margin="0 5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    FontSize="20" FontFamily="Segoe MDL2 Assets" 
                    Content="&#xE724;" HorizontalContentAlignment="Center"
                    Background="Transparent" BorderThickness="0"
                    Click="SendButton_Click">

            </Button>

          <Label x:Name="ConnectLabel" 
                 Grid.Column="1" Grid.Row="1"
                 FontSize="16"
                 Margin="5 0"
                 VerticalAlignment="Center"
                 Visibility="Visible">연결하기</Label>
          <Label x:Name="SendLabel" 
                 Grid.Column="1" Grid.Row="2" 
                 FontSize="16"
                 Margin="5 0"
                 VerticalAlignment="Center"
                 Visibility="Visible">전송하기</Label>
        </Grid>
        
        <Frame x:Name="MainFrame" 
               Grid.Column="1"
               NavigationUIVisibility="Hidden">
            
        </Frame>
    </Grid>
</Window>


