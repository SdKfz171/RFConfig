<Window x:Class="RFConfig.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RFConfig"
        mc:Ignorable="d"
        Title="RFConfigration" 
        Height="350" Width="525"
        MinHeight="350" MinWidth="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="MainMenu" 
                    Grid.Column="0" Width="40">
            <StackPanel.Background>
                <SolidColorBrush Opacity="0.5" Color="LightGray"/>
            </StackPanel.Background>
            <Button x:Name="HamburgerButton" 
                    Margin="0 5" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                    FontSize="20" FontFamily="Segoe MDL2 Assets" 
                    Content="&#xE700;" HorizontalContentAlignment="Center"
                    Background="Transparent" BorderThickness="0"
                    Click="HamburgerButton_Click">
                
            </Button>
            
            <Button x:Name="ConnectButton" 
                    Margin="0 5" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                    FontSize="20" FontFamily="Segoe MDL2 Assets" 
                    Content="&#xED5C;" HorizontalContentAlignment="Center"
                    Background="Transparent" BorderThickness="0"
                    Click="ConnectButton_Click">
                
            </Button>

            <Button x:Name="SendButton" 
                    Margin="0 5" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                    FontSize="20" FontFamily="Segoe MDL2 Assets" 
                    Content="&#xE724;" HorizontalContentAlignment="Center"
                    Background="Transparent" BorderThickness="0"
                    Click="SendButton_Click">

            </Button>
        </StackPanel>
        
        <Frame x:Name="MainFrame" 
               Grid.Column="1">
            
        </Frame>
    </Grid>
</Window>


